{
	"compileOnSave": false,

	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["esnext"],
		"outDir" : "dist",
		"alwaysStrict" : true,
		"noEmitOnError" : true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noFallthroughCasesInSwitch" : true,
		"strictNullChecks": true,
		"sourceMap": true,
		"declaration": true,
		"watch": false
	},

	"include" : ["src/**/*.ts"],

	"exclude": ["node_modules", "dist"]
}